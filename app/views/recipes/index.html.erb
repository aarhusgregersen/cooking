<div class="row">
	<% @number = 0 %>
	<% @recipes.each do |recipe| %>
	<div class="col-sm-6 col-md-3">
		<h3><%= link_to recipe.title, recipe_url(recipe) %></h3>
		<div class="container-fluid">
			<% @number += 1 %>
			<%= link_to image_tag(recipe.recipe_image.url :big_thumb), '#', data: { lightbox: "item-#{@number}", title: "#{recipe.title}" } %>
		</div>
		<p><%= recipe.description %></p>
	</div>
	<% end %>
</div>

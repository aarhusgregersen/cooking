    <%= form_for @recipe do |f| %>


     <div class="col-md-6">
       <div class="field">
        <%= f.label "Upload billede af retten" %>
        <%= f.file_field :recipe_image %>

        <% if current_user.admin? %>
          <%= button_to 'Slet billede?', class:"btn btn-warning" %>
        <% end %>
      </div>

      <div class="field">
        <%= f.label :title %> <br>
        <%= f.text_area :title, cols: 40, rows: 1 %>
      </div>

      <div class="field">
        <%= f.label "Beskrivelse" %> <br>
        <%= f.text_area :description, cols: 60, rows: 10 %>
      </div>
    </div>

    <div class="col-md-6">
      <div class="field">
        <%= f.label "Ingredienser" %> <br>
        <%= f.text_area :ingredients, cols: 60, rows: 10 %>
      </div>


        <%= f.label :instructions, "FremgangsmÃ¥de" %> <br>
        <%= f.text_area :instructions, cols: 60, rows: 10 %>
      </div>
    </div>

    <%= f.submit class: 'btn btn-success' %>
    <% end %>

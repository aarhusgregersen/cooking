    <%= form_for @recipe do |f| %>

     <div class="col-md-6">
       <div class="field">
        <%= f.label "Upload billede af retten" %>
        <%= f.file_field :recipe_image %>

        <% if current_user.admin? %>
          <%= f.label "Slet billede?" %>
          <%= f.check_box :image_delete %>
        <% end %>
      </div>

      <div class="field">
        <%= f.label :title %> <br>
        <%= f.text_area :title, cols: 40, rows: 1 %>
      </div>

      <div class="field">
        <%= f.label "Beskrivelse" %> <br>
        <%= f.text_area :description, cols: 60, rows: 10 %>
      </div>
    </div>

    <div class="col-md-6">
      <div class="field">
        <%= f.label "Ingredienser" %> <br>
        <%= f.text_area :ingredients, cols: 60, rows: 10 %>
      </div>

      <div class="field">
        <%= f.label :instructions, "Fremgangsmåde" %> <br>
        <%= f.text_area :instructions, cols: 60, rows: 10 %>
      </div>
    </div>

    <%= f.submit class: 'btn btn-success' %>
    <% if current_user.admin? %>
      <%= button_to 'Slet?', recipe_path, :method => :delete, data: {:confirm => "Er du sikker på du vil slette opskriften?"}, class: "btn btn-danger" %>
    <% end %>

    <% end %>
